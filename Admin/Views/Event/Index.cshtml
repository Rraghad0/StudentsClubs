@model List<Events>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-bg-primary py-2">Events</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Event" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add new Event
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Event Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var obj in Model.OrderBy(i => i.Id))
                    {
                        <tr>
                            <td>@obj.Id</td>
                            <td>@obj.Title</td>
                            <td><img src="@obj.Description" alt="Post" style="width: 50px; height: 50px;"></td>
                            <td>@obj.EventDate</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Event" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Event" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No Events.</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
