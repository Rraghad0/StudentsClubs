@model IEnumerable<StudentsClubs.Models.Notification>

<div class="mt-4">
    @foreach (var notification in Model)
    {
        <div class="card mb-3 shadow" style="border-radius: 10px; overflow: hidden; max-width: 600px; margin: auto;">

            <div class="gradient-background" style="background: linear-gradient(120deg, #d5fd 0%, #a4fd 100%); aspect-ratio: 1 / 1; display: flex; justify-content: center; align-items: center; width: 600px; height: 450px;">
                <!-- Adjusted height for a smaller square -->
                @if (!string.IsNullOrEmpty(notification.Description))
                {
                    <img src="@Url.Content(notification.Description)" class="img-fluid" style="max-height: 100%; max-width: 100%;" alt="Notification Image" />

                }
                else
                {
                    <i class="far fa-image fa-3x text-white"></i> <!-- Icon for no image available -->
                }
            </div>

            <!-- Notification Description with a more engaging layout -->
            <div class="card-body">
                <h5 class="card-title">Notification</h5>
                <p class="card-text">@notification.Message</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Just now</small>
                    <form asp-action="MarkAsRead" method="post">
                        <input type="hidden" name="notificationId" value="@notification.NotificationId" />
                        <button type="submit" class="btn btn-sm" style="background-color: #d4fc; color: white; border-radius: 20px;">Mark as read</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
